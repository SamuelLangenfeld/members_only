<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<% unless logged_in? %>
  <p>
  Sign in to view authors
  </p>
<% end %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <% if post.user_id %>
          <% if logged_in?%>
            <td><%= User.find(post.user_id).name %></td>
          <% else %>
            <td>Unknown</td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if logged_in? %>
<%= link_to 'New Post', new_post_path %>
<%= link_to 'Log Out', logout_url, method: 'delete' %>
<% else %>
<%= link_to 'Sign In', signin_path %>
<%= link_to 'Home', root_path %>
<% end %>

